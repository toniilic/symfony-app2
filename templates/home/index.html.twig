{% extends 'base.html.twig' %}

{% block body %}


<div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent bonus postings</h6>
    {% for bonus in bonuses %}
    <div class="media text-muted pt-3">
        <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">Play now at</strong>
            <strong class="d-block text-gray-dark"><a href="{{ bonus.casino.url }}" target="_blank">{{ bonus.casino.title }}</a></strong>
        </p>
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">@{{ bonus.author.username }}</strong>
            <strong class="d-block text-gray-dark"><a href="{{ path('bonus_show', {'id':bonus.id}) }}">{{ bonus.title }}</a></strong>
        </p>
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark">Bonus code:</strong>
            <strong class="d-block text-gray-dark text-danger">{{ bonus.bonusCode }}</a></strong>
        </p>
    </div>
    {% endfor %}
    <small class="d-block text-center mt-3">
        <div class="navigation">
        {{ knp_pagination_render(bonuses) }}
        </div>
    </small>
</div>



<div class="my-3 p-3 bg-white rounded shadow-sm">
